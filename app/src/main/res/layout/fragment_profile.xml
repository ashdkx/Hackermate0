<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileFragment">


    <ImageView
        android:id="@+id/ava"
        android:layout_width="205dp"
        android:layout_height="206dp"
        tools:src="@drawable/logo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ava"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/bankgothic"
        android:textSize="20mm"
        android:text="Ash Nguyen" />

    <TextView
        android:id="@+id/spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    "
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name"/>

    <TextView
        android:id="@+id/major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Major: Computer Science"
        android:fontFamily="@font/brussels"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name"
        android:layout_toLeftOf="@id/spacer"
        />

    <TextView
        android:id="@+id/school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School: Rochester Institute of Technology"
        android:fontFamily="@font/brussels"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/spacer"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: "
        android:fontFamily="@font/cantpronoun"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spacer"
        />
    <TextView
        android:id="@+id/interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interests: "
        android:fontFamily="@font/cantpronoun"
        android:layout_below="@id/status"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills: "
        android:fontFamily="@font/cantpronoun"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/interest"
        />

    <GridView
        android:layout_below="@id/skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="4"
        >


    </GridView>


    <TextView
        android:id="@+id/hobbies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobbies: "
        android:fontFamily="@font/cantpronoun"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/skill"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hobbies"
        android:layout_centerHorizontal="true"
        android:text="History"
        android:fontFamily="@font/cantpronoun"
        android:id="@+id/history"
        />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/history"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:layout_gravity="center"
                android:paddingLeft="10mm"
                android:fontFamily="@font/cantpronoun"
                android:text="Hackathon" />
            <TextView
                android:layout_gravity="center"
                android:paddingLeft="10mm"
                android:fontFamily="@font/cantpronoun"
                android:text="Project" />
        </TableRow>

        <TableRow>
            <ListView>

            </ListView>

            <ListView>

            </ListView>
        </TableRow>
    </TableLayout>
</RelativeLayout>