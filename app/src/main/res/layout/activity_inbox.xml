<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ChatActivity">

    <RelativeLayout
        android:id="@+id/headPersonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="12dp"
        android:background="#999a9b">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back_arrow"
            android:padding="6dp"
            android:paddingTop="0dp"/>
        <ImageView
            android:id="@+id/infobtn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/info"
            android:layout_alignParentRight="true"
            android:paddingTop="0dp"/>
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginVertical="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@mipmap/anhdeptrai" />

        <TextView
            android:layout_below="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="The Hacker"
            android:textAlignment="center"
            android:textColor="#000000" />
    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:id="@+id/InputTextBar"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#999a9b">
    <EditText
        android:id="@+id/inputTextField"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:background="@drawable/input_field"
        android:layout_marginLeft="10dp"
        android:paddingLeft="8dp"
        android:paddingBottom="5dp"
        android:text="concak"/>
    <ImageView
        android:paddingTop="5dp"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:paddingRight="5dp"
        android:src="@drawable/send_arrow"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/inputTextField"/>
</RelativeLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/InputTextBar"
        android:layout_below="@+id/headPersonBar"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"></ListView>
</RelativeLayout>